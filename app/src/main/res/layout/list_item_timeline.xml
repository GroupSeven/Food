<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="10dp"
    app:cardCornerRadius="6dp"
    app:contentPadding="10dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:textColor="@color/colorRed"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quân Vũ"
            android:textAlignment="inherit" />

        <TextView
            android:id="@+id/tvSnip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:maxWidth="200sp"
            android:text="Đêm qua tát nước đầu đình,
            bỏ quên laptop trên cành hoa sen"
            android:textAlignment="inherit"
            android:textColor="#ccc" />

        <ImageView
            android:id="@+id/ivImgPostTiemline"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@drawable/facebookiconsmall" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageButton
        android:layout_marginRight="60dp"
        android:src="@drawable/ic_apps_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_marginRight="60dp"
        android:src="@drawable/ic_apps_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_apps_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>